{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "dom",
      "es6",
    ], 
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
       "node_modules/*",
       "src/typings/*"
      ],
      "@Redux/*":[
        "src/redux/*"
      ],
      "@Components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
}